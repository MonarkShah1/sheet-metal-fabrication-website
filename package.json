{
  "name": "sheet-metal-fabrication-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run build && npm run analyze",
    "validate-css": "node scripts/validate-critical-css.js",
    "build:validate": "npm run build && npm run validate-css",
    "performance:audit": "node scripts/performance-audit.js",
    "performance:lighthouse": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "performance:ci": "npm run build && npm run performance:audit",
    "lighthouse:ci": "npx lhci autorun"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "leaflet": "^1.9.4",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-leaflet": "^4.2.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@next/bundle-analyzer": "^15.4.6",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "critters": "^0.0.20",
    "cssnano": "^7.1.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.0.0",
    "purgecss": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0"
  }
}
